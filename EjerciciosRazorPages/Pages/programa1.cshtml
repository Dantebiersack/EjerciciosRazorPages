@page
@model EjerciciosRazorPages.Pages.programa1Model
@{

}
<h3>Cálculo de IMC</h3>

<form method="post">
    <p>Peso (kg): <input type="number" step="0.01" asp-for="peso" /></p>
    <p>Altura (m): <input type="number" step="0.01" asp-for="altura" /></p>
    <p><input type="submit" value="Calcular IMC" /></p>
</form>

@if (Model.imc > 0)
{
    <div>
        <h4>Tu IMC es: @Model.imc.ToString("F2")</h4>
        <p>Clasificación: <strong>@Model.clasificacion</strong></p>
        <img src="img/@Model.nombreImagen" alt="Recomendación" style="max-width:300px;" />
    </div>
}

